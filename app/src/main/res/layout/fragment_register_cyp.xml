<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="simon.unicauca.edu.co.planpop.Fragments.Register_cypFragment"
    >

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Ãšnete a Plan POP"
        android:gravity="center"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:textStyle="bold"
        android:id="@+id/text1"
        android:layout_margin="20dp"/>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Crea tu cuenta en pocos pasos"
        android:gravity="center"
        android:id="@+id/text2"
        android:layout_below="@id/text1"
        android:layout_margin="20dp"
        style="@style/Base.TextAppearance.AppCompat.Body2"
        android:textSize="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Al registrarte, aceptas las condiciones de Plan POP y reconoces haber leido nuestras Politicas de datos, incluida la seccion sobre el uso de cookies. Es posible que recibas notificaciones de Plan POP, pero puedes desactivarlas en cualquier momento."
        android:layout_margin="20dp"
        android:id="@+id/text3"
        android:layout_below="@+id/text2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/TextAppearance.AppCompat.Body2"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Continuar"
        android:id="@+id/btn_nextcyp"
        android:layout_below="@id/text3"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"/>

</RelativeLayout>
