<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.frank.planspop.PerfilActivity"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/fondo_login">

    <ImageView
        android:id="@+id/img_perfil"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/img_fondo"
        android:scaleType="centerCrop"/>


    <TextView
        style="@style/TextAppearance.AppCompat.Display2"
        android:id="@+id/nombre_perfil"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:layout_below="@+id/img_perfil"
        android:paddingTop="20dp"
        />

    <Button
        android:id="@+id/btn_cambiar_foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar Foto"
        android:layout_alignBottom="@+id/img_perfil"
        android:layout_alignParentRight="true"/>
    <Button
        android:id="@+id/btn_cambiar_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar Nombre"
        android:layout_alignBottom="@+id/nombre_perfil"
        android:layout_alignParentRight="true"

        />



</RelativeLayout>
