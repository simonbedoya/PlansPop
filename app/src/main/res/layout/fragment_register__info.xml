<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="simon.unicauca.edu.co.planpop.Fragments.Register_InfoPFragment"
    >

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="¿Ahora te preguntáremos tus datos personales?"
        android:gravity="center"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:textStyle="bold"
        android:id="@+id/text1"
        android:layout_margin="10dp"/>

    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/edt_name"
        android:hint="Complete name"
        android:gravity="center"
        android:layout_below="@+id/text1"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:layout_margin="10dp"/>

    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/edt_fechan"
        android:hint="Birthdate"
        android:gravity="center"
        android:layout_below="@+id/edt_name"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:inputType="date"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_fechan"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:id="@+id/gr_rb"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hombre"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:textSize="18dp"
            />
        <RadioButton
            android:id="@+id/m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mujer"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            />

    </RadioGroup>
    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/edt_user"
        android:hint="Username"
        android:gravity="center"
        android:layout_below="@+id/gr_rb"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:layout_margin="10dp"/>
    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/edt_pass"
        android:hint="Password"
        android:gravity="center"
        android:layout_below="@+id/edt_user"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        android:layout_margin="10dp"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Continuar"
        android:id="@+id/btn_nextip"
        android:layout_below="@+id/edt_pass"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"/>

</RelativeLayout>
