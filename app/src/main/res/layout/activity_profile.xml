<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="simon.unicauca.edu.co.planpop.ProfileActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:id="@+id/img_profile"
        android:src="@drawable/perfil"
        android:padding="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/liner_nombre"
        android:layout_marginTop="20dp"
        android:paddingLeft="30dp"
        android:layout_marginLeft="20dp">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/name"
           android:text="Nombre:"
           style="@style/Base.TextAppearance.AppCompat.Title"
           />

        <EditText
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:id="@+id/profile_name"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:hint="My complete name"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:textSize="18dp"
            android:padding="1dp"
            android:enabled="false"
            android:focusable="false"/>
            <requestFocus/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/liner_correo"
        android:paddingLeft="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:text="Correo electornico:"
            style="@style/Base.TextAppearance.AppCompat.Title"
            />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/profile_email"
            android:hint="example@example.com"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:textSize="18dp"
            android:padding="4dp"
            android:enabled="false"
            />

    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/liner_username"
    android:paddingLeft="30dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="5dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:text="Usuario:"
        style="@style/Base.TextAppearance.AppCompat.Title"
        />

    <EditText
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/profile_username"
        android:hint="username"
        style="@style/Base.TextAppearance.AppCompat.Body2"
        android:textSize="18dp"
        android:padding="1dp"
        android:enabled="false"
        />

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/liner_sex"
        android:paddingLeft="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sex"
            android:text="Genero:"
            style="@style/Base.TextAppearance.AppCompat.Title"
            />

        <EditText
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/profile_sex"
            android:hint="hombre/mujer"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:textSize="18dp"
            android:padding="1dp"
            android:enabled="false"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/liner_birthdate"
        android:paddingLeft="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/birthdate"
            android:text="Fecha de nacimiento:"
            style="@style/Base.TextAppearance.AppCompat.Title"
            />

        <EditText
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/profile_birthdate"
            android:hint="DD/MM/YY"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:textSize="18dp"
            android:padding="1dp"
            android:enabled="false"
            />

    </LinearLayout>


</LinearLayout>
