<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="simon.unicauca.edu.co.planpop.Fragments.EditarMisPlanesFragment">


    <EditText
        style="@style/TextAppearance.AppCompat.Display1"
        android:id="@+id/editNombre_MisPlanes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:gravity="center"
        />


    <EditText
        style="@style/TextAppearance.AppCompat.Display1"
        android:id="@+id/editDescripcion_MisPlanes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DescripciÃ³n"
        android:gravity="center"
        android:layout_below="@+id/editNombre_MisPlanes"

        />

    <TextView
        style="@style/TextAppearance.AppCompat.Body1"
        android:id="@+id/txtFecha_MisPlanes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/btn_txtFechaMisPlanes"
        android:layout_toLeftOf="@+id/btn_txtFechaMisPlanes"
        android:padding="@dimen/padding_small"
        />
    <Button
        android:id="@+id/btn_txtFechaMisPlanes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="editar"
        android:layout_below="@+id/editDescripcion_MisPlanes"
        android:layout_alignParentRight="true"
        />

    <TextView
        style="@style/TextAppearance.AppCompat.Body1"
        android:id="@+id/txtHora_MisPlanes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hora"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/btn_txtHoraMisPlanes"
        android:layout_alignBottom="@+id/btn_txtHoraMisPlanes"
        android:padding="@dimen/padding_small"
        />
    <Button
        android:id="@+id/btn_txtHoraMisPlanes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="editar"
        android:layout_below="@+id/btn_txtFechaMisPlanes"
        android:layout_alignParentRight="true"
        />

    <ImageView
        android:id="@+id/image_MisPlanes"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/btn_txtHoraMisPlanes"
        android:layout_centerInParent="true"
        android:paddingTop="@dimen/padding_small"
        android:background="@drawable/fondo"/>
    <Button
        android:id="@+id/btn_AceptarMisPlanes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
