<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_small"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/fondo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/fondo"
                />

            <ImageView
                android:id="@+id/img_fondo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/img_fondo"
                android:scaleType="centerCrop"
                />
            <TextView
                android:id="@+id/txt_nombre"
                android:text="Nombre"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_verySmall"
                android:layout_toRightOf="@id/img_fondo"

                />
            <TextView
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:id="@+id/txt_descripcion"
                android:text="DescripciÃ³n"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_fondo"
                android:layout_below="@id/txt_nombre"
                android:padding="@dimen/padding_verySmall"
                />

            <TextView
                style="@style/TextAppearance.AppCompat.Body1"
                android:id="@+id/txt_lugar"
                android:text="Lugar"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_fondo"
                android:layout_below="@+id/txt_descripcion"
                android:padding="@dimen/padding_verySmall"
                />

            <TextView
                style="@style/TextAppearance.AppCompat.Body1"
                android:id="@+id/txt_fecha"
                android:text="Fecha"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/fondo"
                android:padding="@dimen/padding_small"
                />

            <TextView
                style="@style/TextAppearance.AppCompat.Body1"
                android:id="@+id/txt_hora"
                android:text="Hora"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/fondo"
                android:layout_alignBottom="@id/img_fondo"
                android:padding="@dimen/padding_small"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>